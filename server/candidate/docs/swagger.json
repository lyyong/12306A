{
    "swagger": "2.0",
    "info": {
        "description": "负责处理与支付和退款相关的业务",
        "title": "候补服务",
        "contact": {
            "name": "LiuYong",
            "email": "ly_yong@qq.com"
        },
        "version": "1.0"
    },
    "host": "localhost:8102",
    "basePath": "/candidate/api/v1",
    "paths": {
        "/": {
            "post": {
                "description": "发送需要候补的信息给服务器, 服务器将执行候补功能",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "请求服务器执行候补功能",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "用户ID",
                        "name": "userID",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "用户名",
                        "name": "username",
                        "in": "query",
                        "required": true
                    },
                    {
                        "description": "需要接受的信息",
                        "name": "wantPayR",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/v1.candidateRecv"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "返回成功",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/controller.JSONResult"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/v1.candidateSend"
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/controller.JSONResult"
                        }
                    }
                }
            }
        },
