                    "type": "string"
                }
            }
        },
        "v1.readRecv": {
            "type": "object",
            "properties": {
                "candidate_id": {
                    "description": "候补id",
                    "type": "string"
                }
            }
        },
        "v1.readSend": {
            "type": "object",
            "properties": {
                "candidate_id": {
                    "type": "string"
                },
                "passengers": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "certificate_number": {
                                "description": "证件号",
                                "type": "string"
                            },
                            "name": {
                                "description": "乘客名",
                                "type": "string"
                            },
                            "type": {
                                "description": "乘客类型 0为普通乘客, 1为学生",
                                "type": "integer"
                            }
                        }
                    }
                }
            }
        }
    }
}